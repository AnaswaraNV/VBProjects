<Window x:Class="PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe_new"
        mc:Ignorable="d"
        Title="PlayerWindow" Height="300" Width="300">
    <Grid Background="#FFCCDAE8">
        <Label Content="Please Enter Player Name" HorizontalAlignment="Left" Margin="22,51,0,0" VerticalAlignment="Top" Width="153" Height="31"/>
        <TextBox x:Name="playerTextBox" HorizontalAlignment="Left" Height="23" Margin="22,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="100,154,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="successTexrBox" HorizontalAlignment="Left" Height="23" Margin="100,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" IsEnabled="False" Visibility="Hidden" Background="#FFFDF4F3" Foreground="#FFFF0E0E"/>

    </Grid>
</Window>
