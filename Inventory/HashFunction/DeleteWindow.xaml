<Window x:Class="DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashFunction"
        mc:Ignorable="d"
        Title="DeleteWindow" Height="300" Width="300">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Label Content="Enter UserName To Delete" HorizontalAlignment="Left" Margin="36,39,0,0" VerticalAlignment="Top" Width="207" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Height="27"/>
        <TextBox x:Name="DelTextBox" HorizontalAlignment="Left" Height="24" Margin="36,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}"/>
        <Button x:Name="DelButton" Content="Click To Delete" HorizontalAlignment="Left" Margin="106,146,0,0" VerticalAlignment="Top" Width="95" Height="22">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <TextBox x:Name="MsgBox" HorizontalAlignment="Left" Height="24" Margin="94,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Yu Gothic UI Semibold" Foreground="#FFE40D0D"/>

    </Grid>
</Window>
