<Window x:Class="SearchDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashFunction"
        mc:Ignorable="d"
        Title="SearchDisplayWindow" Height="300" Width="300">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Visible"  VerticalScrollBarVisibility="Visible" Margin="26,38,0,23">
            <TextBlock x:Name="DisplayBlock" HorizontalAlignment="Left" Margin="23,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="auto" Width="auto" Grid.ColumnSpan="2"/>
        </ScrollViewer>
        <Label Content="User Details" HorizontalAlignment="Left" Margin="44,7,0,0" VerticalAlignment="Top" Width="148" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" FontFamily="Segoe UI Black" Height="26"/>

    </Grid>
</Window>
